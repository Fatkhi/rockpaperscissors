<!doctype html>
<html>
<head>
	<title>Rock - Paper - Scissors</title>
	<meta charset="UTF-8">
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	<div id="app">
		<section class="player" id="player1">
			<div class="move js-rock">
				Rock
			</div>
			<div class="move js-paper">
				Paper
			</div>
			<div class="move js-scissors">
				Scissors
			</div>
			<div class="button js-simulate">Simulate move</div>
		</section>	
		<section class="scoreboard" id="scoreboard">
			<div class="scoreboard-text">Make a move</div>
			<div class="button hidden js-play-again">Play again</div>
		</section>
		<section class="player" id="player2">
			<div class="move disabled js-rock">
				Rock
			</div>
			<div class="move disabled js-paper">
				Paper
			</div>
			<div class="move disabled js-scissors">
				Scissors
			</div>
		</section>	
	</div>
</body>
</html>
